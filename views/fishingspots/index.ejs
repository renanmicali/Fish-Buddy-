<% layout('layouts/boilerplate') %>

    <div id="map" style="width: 100%; height: 500px;">

    </div>
    <h1>Fishing Spots</h1>
    <div>
        <a class="btn btn-info mb-3" href="/fishingspots/new">Add Fishing Spot</a>
    </div>

    <% for(let fishingspot of fishingspots) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if (fishingspot.images.length) { %>
                        <img class="img-fluid" src="<%= fishingspot.images[0].url %>" alt="">
                        <% } else { %>
                            <img class="img-fluid"
                                src="https://res.cloudinary.com/du29yspmy/image/upload/v1628495974/FishBuddyYelp/uhgcfsrqwceitojds3xa.jpg"
                                alt="">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card title">
                            <%= fishingspot.title%>
                        </h5>
                        <p class="card-text">
                            <%= fishingspot.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= fishingspot.location %>
                            </small>
                        </p>
                        <a href="/fishingspots/<%=fishingspot._id%> " class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
                const fishingspots = { features: <%- JSON.stringify(fishingspots) %> }
            </script>
            <script src="/javascripts/clusterMap.js"></script>